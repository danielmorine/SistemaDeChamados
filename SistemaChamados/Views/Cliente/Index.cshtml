@model List<Model.Entity.Cliente>
@{
    ViewBag.Title = "Cliente";
}

<h2 class="text-center text-success">Cliente</h2>
<div class="well well-sm"><a class="btn btn-primary" href="~/Cliente/Create">Novo</a></div>
<table class="table table-hover table-striped">
    <thead>
        <tr class="table-primary">
            <th>Codigo</th>
            <th>Contato</th>
            <th>Email</th>
            <th>Telefone</th>
            <th colspan="3">Empresa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objCliente in Model)
        {
            <tr>
                <td>@objCliente.IdCliente</td>
                <td>@objCliente.Pessoa</td>
                <td>@objCliente.Email</td>
                <td>@objCliente.Telefone</td>
                <td>@objCliente.Apelido</td>
                <td><a class="btn btn-info" href="~/Cliente/Update/@objCliente.IdCliente"><span class="fa fa-edit">Editar/Visualizar</span></a></td>
                <td><a class="btn btn-danger" href="~/Cliente/Delete/@objCliente.IdCliente"><span class="fa fa-book">Excluir</span></a></td>
            </tr>
        }
    </tbody>

</table>
<div class="text-primary text-danger text-center">
    @ViewBag.MensagemErro;
</div>
