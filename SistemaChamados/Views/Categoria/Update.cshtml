@model Model.Entity.Categoria
@{
    ViewBag.Title = "Editar Categoria";
}

<h2>@ViewBag.MensagemInicialAtualizar</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.IdCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.IdCategoria, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-actions col-md-offset-2">
                <input class="btn btn-primary" type="submit" name="btnsalvar" value="Editar" />|
                @Html.ActionLink("Voltar a Lista", "Index")
            </div>

        </fieldset>
    </div>

}

<div class="text-primary text-success text-center">
    @ViewBag.MensagemExito;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MensagemErro;
</div>

<script type="text/javascript">
    function validarCampoCodigo() {
        var codigo = document.getElementById("IdCategoria");
        if (codigo.value != null) {
            codigo.disabled = true;
        }
    }

</script>